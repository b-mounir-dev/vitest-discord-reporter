{
  "name": "@bouaiche/vitest-discord-reporter",
  "version": "0.1.1",
  "description": "A Vitest reporter that sends test results to a Discord channel via embeds",
  "keywords": [
    "vitest",
    "reporter",
    "discord",
    "ci",
    "testing"
  ],
  "type": "module",
  "license": "MIT",
  "author": "Mounir Bouaiche <mounir.bouaiche.dev@gmail.com>",
  "homepage": "https://github.com/b-mounir-dev/vitest-discord-reporter",
  "bugs": {
    "url": "https://github.com/b-mounir-dev/vitest-discord-reporter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b-mounir-dev/vitest-discord-reporter.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf dist",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test:run": "vitest run",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && npm publish"
  },
  "dependencies": {
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "bumpp": "^10.1.0",
    "discord.js": "^14.22.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "vitest": ">=3.0.0"
  }
}
